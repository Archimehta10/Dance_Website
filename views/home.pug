extends base.pug 

block scripts   
    script(src='/static/script.js')

block style 
    style 
        include ../static/style.css

block content   
    section#introsection 
        div  Welcome to Archi's Dance Academy. 
        div.size Eat Sleep Dance Repeat
    section#missionsection 
        h1 Our Mission 
        div.card
            h3 Dance Perfection
            div.card-box
                div.card-img
                    img(src="/static/img/1.png")
                div.card-content
                    p Dancing is like dreaming with your feet. Let your dreams come true.
        div.card
            h3 Dance the way you like
            div.card-box
                div.card-img
                    img(src="/static/img/2.png")
                div.card-content
                    p Dance like nobody's watching, and let your heart lead the way.  
        div.card
            h3 Expert Teaching
            div.card-box
                div.card-img
                    img(src="/static/img/3.png")
                div.card-content
                    p Let our expert teachers guide you on the path to success in the world of dance.
    section#sponsorsection 
        h1 Our Sponsors 
        div#sponsors
            img(src="/static/img/logo1.png",alt="Sponsor Image",class="spImage")
            img(src="/static/img/logo2.png",alt="Sponsor Image",class="spImage")
            img(src="/static/img/logo3.png",alt="Sponsor Image",class="spImage")
            img(src="/static/img/logo4.png",alt="Sponsor Image",class="spImage")